# prefix key(Ctrl-z)
escape ^Zz

# screen起動のシェルをtmuxに変更する
shell "tmux"

# VIM用にESCの反応を早くする
maptimeout 0

# ステータスバーの有効化
hardstatus on
hardstatus alwayslastline '%m/%d %02c:%s %{= .g}%H%{-} %L=%-w%45L>%{= gw}%n: %t%{-}%+w %-17<%=%{= .y} Load Average(%l)'

# キャプション
caption always '%?%F%{= gW}%:%{= Kk}%?%2n%f%07=%t%='

# ウィンド
windowlist title  '%{u .g}Num Flags Title%='
windowlist string '%{.g}%3n %{.y}%f%09=%{-} %t %='

# ベル無効
vbell off

# オートデタッチ
autodetach on

# スタートアップ画面の無効化
startup_message off

# vimなどで編集した後に画面履歴を残さない
altscreen on

# screen上のvimで256色サポートを有効に
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on

# screen上で256色をサポートに(for mac)
term xterm-256color
termcapinfo xterm-256color 'is=^[r^[mJ^[H^[?7h^[?1;4;6l'

# 隠れているwindowに動きがあったとき、それを伝える
defmonitor on
# メッセージを表示する秒数
msgwait 0
# 隠れているwindowで動きがあったときのメッセージ
activity ""

# スクロールバッファを増やす
defscrollback 10000

# 任意のレジスタをペーストする
bind ^c copy
bind ^y paste .
bind p paste

# Windowの番号を1からにする
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

